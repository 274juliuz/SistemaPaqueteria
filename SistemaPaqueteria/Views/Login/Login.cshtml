
@{
    ViewBag.Title = "Login";
}

<!doctype html>
<html>
<head>

    <title>Inicio de sesion</title>

</head>
<body>
    <div class="container">
        <div class="abs-center">
            <section class="login_box_area section_gap">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="login_box_img">
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <img class="img-fluid" src="~/img/logo_plano.png" alt="">
                                <div class="hover">
                                    <h4>¿Eres nuevo?</h4>
                                    <p>Contactanos para hacer uso de nuestros servicios.</p>
                                    <a class="primary-btn" href="mailto:logpack2017@gmail.com">Contactar</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 justify-content-center">
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            <div class="login_box_area">
                                <form class="row login_form needs-validation" id="loginForm" novalidate method="post">
                                    <h4>Inicio de sesión</h4>
                                    <h5>Usuario</h5>
                                    <div class="col-md-7 form-group">
                                        <input type="email" class="form-control" id="cCorreo" name="cCorreo" placeholder="Ingrese su usuario" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Ingrese su usuario'">
                                    </div>
                                    <br />
                                    <br />
                                    <div class="col-md-7 form-group">
                                        <h5>Contraseña</h5>
                                        <input type="password" class="form-control" id="cContrasenia" name="cContrasenia" placeholder="Ingrese su contraseña" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Ingrese su contraseña'">
                                    </div>
                                    <div class="col-md-12 form-group">
                                        <br />
                                        <button id="btnLogin" class="primary-btn">Iniciar sesión</button>
                                    </div>
                                    <div><a href="mailto:logpack2017@gmail.com">¿Olvidaste tu contraseña?</a></div>
                                </form>
                            </div>
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</body>
</html>

